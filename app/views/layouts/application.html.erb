<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/38dc52f0f7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbo-track': 'reload' %>
  </head>

  <header>
      <!-- 共通リンク -->
      <li class="nav-item">
        <%= link_to 'Bookers', root_path %>
      </li>

      <!-- ログインしてる人のみリンク -->
      <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Home', user_path(current_user) %>
          </li>
        <li class="nav-item">
          <%= link_to 'Users', users_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Books", books_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>

      <!-- ログインしてない時のリンク -->
      <% else %>
        <li class="nav-item">
          <%= link_to 'Home', root_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'About', about_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path %>
        </li>
      <% end %>
  </header>

  <body>
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %>">
        <%= message %>
      </div>
    <% end %>

    <!-- ログインしている場合にのみユーザー情報を表示 -->
    <% if user_signed_in? && @user.present? %>
      <div>
        <h3><%= @user.name %></h3>
        <%= image_tag @user.get_profile_image(100,100) %> <!-- ユーザーのプロフィール画像を表示 -->
        <% if @user == current_user %>
          <p><%= link_to "user_image", edit_user_path(@user.id) %></p>
        <% end %>
      </div>
    <% end %>

    <!-- 作成画面 -->
    <% if user_signed_in? && @book.present? %> 
      <h2>New Book</h2>
      <!-- エラーメッセージ -->
      <% if @book && @book.errors.any? %>
        <div class="error-messages">
          <h3>
            <%= @book.errors.count %>
            errors prohibited this book from being saved:
          </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <!-- 登録フォーム -->
      <%= form_with model: @new_book, local: true do |f| %>
        <div class="field">
          <%= f.label :title, class: @new_book.errors[:title].any? ? 'field_with_errors' : '' %><br>
          <%= f.text_field :title, class: @new_book.errors[:title].any? ? 'field_with_errors' : '' %><br>
        </div>

        <div class="field" style="margin-top: 5px;">
          <%= f.label :body, class: @new_book.errors[:body].any? ? 'field_with_errors' : '' %><br>
          <%= f.text_area :body, class: @new_book.errors[:body].any? ? 'field_with_errors' : '' %><br>
        </div>
        <!-- 登録ボタン -->
        <div class="actions" style="margin-top: 5px;">
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    <% end %>

    <%= yield %>
  </body>

  <footer>
    <div class='footer'>
      <p>CopyRight Infratop.inc</p>
    </div>
  </footer>
</html>
