<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/38dc52f0f7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', 'data-turbolinks': 'false' %>
  </head>

  <header>
      <!-- 共通リンク -->
      <li class="nav-item">
        <%= link_to 'Bookers', root_path %>
      </li>

      <!-- ログインしてる人のみリンク -->
      <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Home', user_path(current_user) %>
          </li>
        <li class="nav-item">
          <%= link_to 'Users', users_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Books", books_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>

      <!-- ログインしてない時のリンク -->
      <% else %>
        <li class="nav-item">
          <%= link_to 'Home', root_path %>
        </li>
        <li class="nav-item">
          <%= link_to 'About', about_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path %>
        </li>
      <% end %>
  </header>

  <body>
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %>">
        <%= message %>
      </div>
    <% end %>

    <%= yield %>
  </body>

  <footer>
    <div class='footer'>
      <p>CopyRight Infratop.inc</p>
    </div>
  </footer>
</html>
