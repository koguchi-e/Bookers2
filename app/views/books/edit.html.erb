<h2>Editing Book</h2>

<!-- エラーメッセージ表示 -->
<% if @book.errors.any? %>
  <div class="error-messages">
    <h3><%= @book.errors.count %> error<%= @book.errors.count > 1 ? 's' : '' %> prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, local: true do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <% if @book.errors[:title].any? %>
      <div class="error"><%= @book.errors[:title].join(", ") %></div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %><br>
    <% if @book.errors[:body].any? %>
      <div class="error"><%= @book.errors[:body].join(", ") %></div>
    <% end %>
  </div>

  <!-- 更新ボタン -->
  <%= f.submit "Update Book", class: "btn-editing-book" %><br>

  <!-- 詳細画面リンク -->
  <%= link_to "Show", book_path(@book) %> | 
  <!-- 一覧画面に戻るリンク -->
  <%= link_to "Back", books_path %>
<% end %>
