<!-- 全体の一覧画面 -->
<!-- みんなの投稿全部見れる画面 -->
<table class="books-table">
  <h2>Books</h2>
  <hr>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <!--
  # item.title だと、itemクラスのインスタンスがあるのか？と思ってしまう
  -->
    <% @books.each do |book| %>
      <tr class="field">
        <td class="user_image">
          <%= link_to user_path(book.user) do %>
            <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td class="title"><%= link_to book.title, book_path(book.id) %></td>
        <td class="body"><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
