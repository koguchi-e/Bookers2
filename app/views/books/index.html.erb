<!DOCTYPE html>
<html>
<head>
    <title>Books</title>
</head>
<body>

<!-- 一覧画面 -->
<h1>Books</h1>
<table>
  <thead>
      <tr>
          <th>Title</th>
          <th>Option</th>
      </tr>
  </thead>
  <tbody>
      <% @books.each do |item| %>
      <tr class="field">
          <td class="user_image"><%= image_tag item.user.get_profile_image(100,100) %></td>
          <td class="title"><%= link_to item.title, book_path(item.id) %></td>
          <td class="body"><%= item.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</body>
</html>