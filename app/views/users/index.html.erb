<!-- ユーザ一覧画面 -->
<h2>Users</h2>
<hr>
<table class="users-table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="field">
        <td class="user_image">
          <%= link_to user_path(user) do %>
            <%= image_tag user.get_profile_image(100, 100) %>
          <% end %>
        </td>
        <td class="name">
          <%= user.name %>
        </td>
        <td class="option">
          <%= link_to 'Show', user_path(user)%> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

